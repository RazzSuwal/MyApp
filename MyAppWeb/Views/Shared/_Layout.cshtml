@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContext;



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clothing Store </title>
    @*<link rel="stylesheet" href="~/css/DarkBootWatch.css" />*@
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"  />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.datatablescss" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <section id="header">
            <a href="#"><img src="~/img/logo.png" class="logo" width="100px" height="70px"> </a>
            <div>
                <ul id="navbar">
                    <li><a asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="Customer" asp-controller="Home" asp-action="Shop">Shop</a></li>
                    <li><a asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a></li>
                    <li><a asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a></li>
                    <li><a asp-area="Admin" asp-controller="Order" asp-action="Index">Orders</a></li>
                    <li><a href="/">Blog</a></li>
                    <li><a href="/">About</a></li>
                    <li><a href="/">Contact</a></li>
                        @if (httpContext.HttpContext.Session.GetInt32("SessionCart") != null)
                        {
                            <li class="nav-item">
                            <a class="nav-link" asp-area="Customer" asp-controller="cart" asp-action="Index">
                                <i class="fa fa-shopping-cart" style="font-size:40px;color:rgb(6, 7, 7)"></i>
                            </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Customer" asp-controller="cart" asp-action="Index">
                                <i class="fa fa-shopping-cart" style="font-size:40px;color:rgb(6, 7, 7)"></i>
                                </a>
                            </li>
                        }
                       
                    <partial name="_LoginPartial"/>
                </ul>
                    @*<form class="d-flex">
                        <input class="form-control me-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
                </div>
        </section>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2023 - MyAppWeb - Created By razzsuwal@gmail.com <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
